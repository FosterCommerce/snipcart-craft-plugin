{% import "_includes/forms" as forms %}

{% macro errorList(errors) %}
    {% if errors %}
        <ul class="errors">
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}

{% macro customTextInput(element, name, fieldName, value, options) %}
    {% import "_includes/forms" as forms %}
    {% from _self import errorList %}
    {% set subfieldName = name ~ '[' ~ fieldName ~ ']' %}
    {% set errors = element.getErrors(subfieldName) %}
    {% set fieldClasses = options['classes'] ?? [] %}
    {% if errors | length %}
        {% set fieldClasses = fieldClasses | merge(['errors']) %}
    {% endif %}
    <div class="input{% if errors | length %} errors{% endif %}">
        {{- forms.text({
            id: fieldName,
            name: subfieldName,
            class: fieldClasses | join(' '),
            errors: element.getErrors(subfieldName),
            value: value[fieldName] ?? '',
            size: options['size'] ?? null
        }) -}}
    </div>
    {{ errorList(errors) }}
{% endmacro %}

{% from _self import errorList %}
{% from _self import customTextInput %}

<div class="snipcart-product-details">
    <div id="snipcart-sku-field" class="field-group border-t-0">
        <div class="field-label w-2/5 sm:w-1/5">
            <label for="sku" class="required">
                {{- "SKU"|t -}}
            </label>
        </div>
        <div class="field-input w-3/5 sm:w-4/5">
            {{ customTextInput(element, name, 'sku', value, { classes: ['code'] }) }}
        </div>
    </div>
    <div id="snipcart-inventory-field" class="field-group border-t{% if settings.displayInventory is not defined or settings.displayInventory != true %} hidden{% endif %}">
        <div class="field-label w-2/5 sm:w-1/5">
            <label for="inventory">
                {{- "Inventory"|t -}}
            </label>
        </div>
        <div class="field-input w-3/5 sm:w-4/5">
            {{ customTextInput(element, name, 'inventory', value, { size: 20 }) }}
        </div>
    </div>
    <div id="snipcart-price-field" class="field-group border-t">
        <div class="field-label w-2/5 sm:w-1/5">
            <label for="price" class="required">
                {{- "Price"|t -}}
            </label>
        </div>
        <div class="field-input w-3/5 sm:w-4/5">
            <div class="price-wrapper">
                <div class="currency-symbol">
                    {{ craft.snipcart.defaultCurrencySymbol }}
                </div>
                {{- customTextInput(element, name, 'price', value, { size: 8 }) -}}
            </div>
        </div>
    </div>
    <div id="snipcart-taxable-field" class="field-group border-t">
        <div class="field-label w-2/5 sm:w-1/5">
            <label for="taxable">
                {{- "Taxable"|t -}}
            </label>
        </div>
        <div class="field-input w-3/5 sm:w-4/5">
            {{ forms.lightswitch({
                id: 'taxable',
                name: name ~ '[taxable]',
                on: value.taxable ?? false,
                value: true,
            }) }}
            {{ errorList(element.getErrors(name ~ '[taxable]')) }}
        </div>
    </div>
    <div id="snipcart-shippable-field" class="field-group border-t">
        <div class="field-label w-2/5 sm:w-1/5">
            <label for="shippable">
                {{- "Shippable"|t -}}
            </label>
        </div>
        <div class="field-input w-3/5 sm:w-4/5">
            {{ forms.lightswitch({
                id: 'shippable',
                name: name ~ '[shippable]',
                on: value.shippable ?? false,
                value: true,
            }) }}
            {{ errorList(element.getErrors(name ~ '[shippable]')) }}
        </div>
    </div>
    <div id="snipcart-weight-field" class="field-group border-t{% if value.shippable is not defined or value.shippable != true %} hidden{% endif %}">
        <div class="field-label w-2/5 sm:w-1/5">
            <label for="weight">
                {{- "Weight"|t -}}
            </label>
        </div>
        <div class="field-input w-3/5 sm:w-4/5">
            {{ forms.text({
                id: 'weight',
                name: name ~ '[weight]',
                value: value.weight ?? '',
                size: 5,
            }) }}

            <div class="select">
                {{ forms.select({
                    id: 'weightUnit',
                    name: name ~ '[weightUnit]',
                    options: weightUnitOptions,
                    value: value.weightUnit ?? '',
                    errors: field.getErrors('weightUnit'),
                }) }}
            </div>

            {{ errorList(element.getErrors(name ~ '[weight]')) }}
            {{ errorList(element.getErrors(name ~ '[weightUnit]')) }}
        </div>
    </div>
    <div id="snipcart-dimensions-field" class="field-group border-t{% if value.shippable is not defined or value.shippable != true %} hidden{% endif %}">
        <div class="field-label w-2/5 sm:w-1/5">
            <label>
                {{- "Dimensions"|t -}}
            </label>
        </div>
        <div class="field-input w-3/5 sm:w-4/5">
            {{ forms.text({
                id: 'length',
                name: name ~ '[length]',
                class: 'dimension-input',
                placeholder: 'L',
                size: 5,
                value: value.length ?? '',
                errors: field.getErrors('length'),
            }) }} <span class="muted">×</span>

            {{ forms.text({
                id: 'width',
                name: name ~ '[width]',
                class: 'dimension-input',
                placeholder: 'W',
                size: 5,
                value: value.width ?? '',
                errors: field.getErrors('width'),
            }) }} <span class="muted">×</span>

            {{ forms.text({
                id: 'height',
                name: name ~ '[height]',
                class: 'dimension-input',
                placeholder: 'H',
                size: 5,
                value: value.height ?? '',
                errors: field.getErrors('height'),
            }) }}

            <div class="select mt-2 sm:mt-0">
                {{ forms.select({
                    id: 'dimensionsUnit',
                    name: name ~ '[dimensionsUnit]',
                    options: dimensionsUnitOptions,
                    value: value.dimensionsUnit ?? '',
                    errors: field.getErrors('dimensionsUnit'),
                }) }}
            </div>

            {{ errorList(element.getErrors(name ~ '[length]')) }}
            {{ errorList(element.getErrors(name ~ '[width]')) }}
            {{ errorList(element.getErrors(name ~ '[height]')) }}
            {{ errorList(element.getErrors(name ~ '[dimensionsUnit]')) }}
        </div>
    </div>
</div>
